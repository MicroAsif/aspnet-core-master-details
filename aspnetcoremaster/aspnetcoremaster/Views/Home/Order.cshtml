@model aspnetcoremaster.core.Model.InventoryModel
@{
    ViewData["Title"] = "Order";
}




<br />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="col-md-4">
            <label asp-for="InventoryCode">Inventory Code</label>
            <input type="text" asp-for="InventoryCode" class="form-control" placeholder="Inventory code" />
            @Html.ValidationMessageFor(model => model.InventoryCode, "", new { @class = "text-danger" })
        </div>
        <div class="col-xs-4">
            <label asp-for="CreatedDate">Inventory Date</label>
            @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Inventory date" } })
            @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
        </div>
        <div class="col-xs-4">
            <label asp-for="InventoryCode">Inventory Status</label>
            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @placeholder = "Inventory Status" } })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-10 col-md-offset-1">
        <br />
        <div class="col-md-4">
            <label asp-for="CustomerId">Customer Phone</label>
            <input type="text" asp-for="CustomerId" class="form-control" placeholder="Customer Phone" />
            @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
        </div>
        <div class="col-xs-4">
            <label for="CustomerName">Customer Name</label>
            @Html.Editor("CustomerName", new { htmlAttributes = new { @class = "form-control", @id = "CustomerName", @placeholder = "Customer Name" } })
        </div>
    </div>


    <div class="col-md-4 col-md-offset-1">
        <br />
        <input type="button" value="Add Products" data-toggle="modal" data-target="#loginModal" class="btn btn-success col-md-4 col-md-offset-1" />
    </div>
    <div class="col-md-10 col-md-offset-1">
        <br />
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Product Name</td>
                    <td>Rate</td>
                    <td>Quantity</td>
                    <td>Amount</td>
                    <td>Remove</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Rice</td>
                    <td>20</td>
                    <td>2</td>
                    <td>40</td>
                    <td><input type="button" class="btn btn-danger btn-sm" />X</td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="col-md-12">
        <div class="col-md-2 col-md-offset-9">
            <label asp-for="TotalAmount">Total Amount</label>
            <input type="text" asp-for="TotalAmount" class="form-control" placeholder="Total Amount" />
            @Html.ValidationMessageFor(model => model.TotalAmount, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-2 col-md-offset-9">
            <label asp-for="GivenAmount">Given Amount</label>
            <input type="text" asp-for="GivenAmount" class="form-control" placeholder="Given Amount" />
            @Html.ValidationMessageFor(model => model.GivenAmount, "", new { @class = "text-danger" })

        </div>

        <div class="col-md-2 col-md-offset-9">
            <label asp-for="ChangeAmount">Change Amount</label>
            <input type="text" asp-for="ChangeAmount" class="form-control" placeholder="Change Amount" />
            @Html.ValidationMessageFor(model => model.ChangeAmount, "", new { @class = "text-danger" })
            <br />
        </div>

        <input type="submit" value="Save Order" class="btn btn-success col-md-2 col-md-offset-9" />
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <div class="modal fade bs-example-modal-sm" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <h4 class="modal-header">Select Product</h4>
                    <div class="modal-body">
                        <div class="container">
                            <div class="col-md-3">
                                <label class="control-label">Category</label>
                                @Html.DropDownList("Category", new SelectList(string.Empty, "Value", "Text"), "select Product", new { @class = "form-control", id = "Category" })

                                <div>
                                    <label class="control-label">Description</label>
                                    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control", id = "Description", @readonly = "readonly" } })

                                    <label class="control-label">Price</label>
                                    @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control", id = "Price", @readonly = "readonly" } })
                                    <br />
                                </div>
                            </div>
                            <div class="col-md-3">

                                <label class="control-label">Product</label>
                                @Html.DropDownList("Product", new SelectList(string.Empty, "Value", "Text"), "select Product", new { @class = "form-control", id="Product" })

                                <label class="control-label">Quantity</label>
                                @Html.Editor("Quantity", new { htmlAttributes = new { @class = "form-control", id = "Quantity" } })

                                <label class="control-label">Amount</label>
                                @Html.Editor("Amount", new { htmlAttributes = new { @class = "form-control", id = "Amount", @readonly = "readonly" } })
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <a id="BtnAdd" class="btn btn-primary">
                            <span class="glyphicon glyphicon-plus"></span> Add
                        </a>
                        <a id="BtnClose" class="btn btn-danger" data-dismiss="modal">
                            <span class="glyphicon glyphicon-off"></span> Close
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
      <script type="text/javascript">
          $(document).ready(function () {


              //get categories
              $.ajax({
                  type: "GET",
                  url: "/Home/GetCategories",
                  datatype: "Json",
                  success: function (data) {
                      $.each(data, function (index, value) {
                          console.log(value);
                          $('#Category').append('<option value="' + value.categoryId + '">' + value.categoryName + '</option>');
                      });
                  }
              });


              //get products
              $.ajax({
                  type: "GET",
                  url: "/Home/GetProducts",
                  datatype: "Json",
                  success: function (data) {
                      $.each(data, function (index, value) {
                          console.log(value);
                          $('#Product').append('<option value="' + value.id + '">' + value.name + '</option>');
                      });
                  }
              });

                    //$('#Product').select2();
                })


    </script>
}

